acl internal {
        127.0.0.0/8;
        172.17.0.1;
        172.17.0.0/24;
        192.168.100.0/24;
};


options {
        directory "/var/cache/bind";
        dnssec-validation auto;
        listen-on port 5553 { localhost; internal; };
        listen-on-v6 { none; };
        allow-query{ internal; };
        forwarders{
                1.1.1.1;
                8.8.8.8;
        };
        recursion yes;

};
